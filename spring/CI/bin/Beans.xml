<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:context="http://www.springframework.org/schema/context"
 xsi:schemaLocation="http://www.springframework.org/schema/beans 
 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
 http://www.springframework.org/schema/context 
 http://www.springframework.org/schema/context/spring-context-3.0.xsd">  
  
  
  
<bean id="e" class="umapath.net.Employee">  
<constructor-arg value="12"/>  
<constructor-arg value="umapath"></constructor-arg>  
<constructor-arg>  
<ref bean="a1"/>  
</constructor-arg>  
</bean>  

<bean id="a1" class="umapath.net.Address">  
<constructor-arg value="Bangalore"></constructor-arg>  
<constructor-arg value="Karnataka"></constructor-arg>  
<constructor-arg value="India"></constructor-arg>  
</bean>  

  
</beans>  