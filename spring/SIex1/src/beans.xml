<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:context="http://www.springframework.org/schema/context"
 xsi:schemaLocation="http://www.springframework.org/schema/beans 
 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
 http://www.springframework.org/schema/context 
 http://www.springframework.org/schema/context/spring-context-3.0.xsd">
 
 <bean id="address1" class="net.umapath.Address">  
<property name="addressLine1" value="612,Munnekolala" />  
<property name="city" value="Bangalore"/>  
<property name="state" value="Karnakata"/>  
<property name="country" value="India"/>  
</bean>  
  
<bean id="obj" class="net.umapath.Employee">  
<property name="id" value="111"></property>  
<property name="name" value="umapath"></property>  
<property name="address" ref="address1"></property>  

</bean>  

</beans>